extends ../layout

block content
    .container
        .row
            each cate in categories
                .panel.panel-default
                    .panel-heading
                        h3
                            a(href="/results?cat=#{cate._id}&p=0") #{cate.name}
                    .panel-body
                        if cate.movies && cate.movies.length > 0
                            each item in cate.movies
                                .col-md-2
                                    .thumbnail
                                        a(href="/movie/#{item._id}")
                                            img(src="#{item.poster}", alt="#{item.title}")
                                        .caption
                                            h3= title
                                            p: a.btn.btn-primary(href="/movie/#{item._id}", role="button") 观看宣传片
