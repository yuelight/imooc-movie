extends ../layout

block content
    .container
        .row
            table.table.table-hover.table-bordered
                thead
                    tr
                        th 电影名字                    
                        th 导演
                        th 国家
                        th 上映年份
                        th 录入时间
                        th pv
                        th 查看
                        th 修改
                        th 删除
                tbody
                    each item in movies
                        tr(class="item-id-#{item._id}")
                            td= item.title
                            td= item.doctor
                            td= item.country
                            td= item.year
                            td= moment(item.meta.updateAt).format('MM/DD/YYYY')
                            td= item.pv
                            td: a(href="../movie/#{item._id}", target="_blank") 查看
                            td: a(href="../admin/movie/update/#{item._id}", target="_blank") 修改
                            td: button.del.btn.btn-danger(data-id="#{item._id}") 删除
                            
block scripts
    script(src="/js/admin.js")
